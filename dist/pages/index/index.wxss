page {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  min-height: 100vh;
  background-color: #eee;
}
.calculator {
  --button-width: 22vw;
  --button-height: 22vw;
  display: grid;
  grid-template-areas: "viewer viewer viewer viewer" "ac plus-minus percent divide" "number-7 number-8 number-9 multiply" "number-4 number-5 number-6 subtract" "number-1 number-2 number-3 add" "number-0 number-0 dot equal";
  grid-template-columns: repeat(4, var(--button-width));
  grid-template-rows: repeat(6, var(--button-height));
  padding: 50rpx;
  padding-bottom: 70rpx;
  border-radius: 20rpx;
}
.calculator button {
  margin: 12rpx;
  padding: 0;
  border: 0;
  display: block;
  outline: none;
  line-height: 140rpx;
  border-radius: calc(var(--button-height) / 2);
  font-size: 30rpx;
  font-family: Helvetica;
  font-weight: normal;
  color: #999;
  background: linear-gradient(135deg, #e6e6e6 0%, #f6f6f6 100%);
  box-shadow: -4rpx -4rpx 10rpx white, 4rpx 4rpx 10rpx rgba(0, 0, 0, 0.3);
  cursor: pointer;
}
button::after {
  border: none;
}
.calculator button:active {
  box-shadow: -10rpx -10rpx 24rpx -20rpx white inset, 10rpx 10rpx 14rpx -20rpx rgba(0, 0, 0, 0.3) inset;
}
.viewer {
  padding: 0 20rpx;
  line-height: var(--button-height);
  font-size: 90rpx;
  text-align: right;
  font-family: Helvetica;
  color: #666;
  cursor: pointer;
  overflow: hidden;
}